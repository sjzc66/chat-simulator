.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32px;
  background: #f7f7f7;
}

.launch-btn {
  width: 100%;
  height: 50px;
  line-height: 50px;
  background: #07c160;
  color: #fff;
  font-size: 18px;
  font-weight: 500;
  border-radius: 25px;
  box-shadow: 0 4px 8px rgba(7, 193, 96, 0.2);
}

.launch-btn:active {
  transform: scale(0.98);
}